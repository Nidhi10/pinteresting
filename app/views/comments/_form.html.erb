<% if user_signed_in? %>
  <div class="panel-body">
    <%= form_for([@pin,@pin.comments.build], html: {class:"form-horizontal"}) do |f| %>
        <% if @pin.comments.build.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@pin.comments.build.errors.count, "error") %> prohibited this pin from being saved:</h2>

            <ul>
            <% @pin.comments.build.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.text_area :content,class:"form-control",placeholder:"Post a comment"  %>
            </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit 'Post Comment', class:"btn btn-primary" %>
          </div>
        </div>
     <% end %>
  </div>
<% end %>