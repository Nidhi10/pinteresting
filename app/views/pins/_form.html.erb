<div class="panel-body">
  <%= form_for(@pin, html: {class:"form-horizontal",:multipart => true} ) do |f| %>
    <% if @pin.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

        <ul>
        <% @pin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :Image, class:"col-sm-2 form-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image %>
        </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class:"col-sm-2 form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>